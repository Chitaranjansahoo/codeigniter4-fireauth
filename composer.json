{
	"name": "tatter/myth-auth-firebase",
	"description": "Firebase authentication extension for Myth:Auth in CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"myth",
		"authentication",
		"firebase",
		"google",
		"cloud"
	],
	"homepage": "https://github.com/tattersoftware/myth-auth-firebase",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		},
		{
			"type": "vcs",
			"url": "https://github.com/lonnieezell/myth-auth"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php" : "^7.1",
		"myth/auth": "dev-develop"
	},
	"require-dev": {
		"phpunit/phpunit" : "^7.0",
		"mockery/mockery": "^1.0",
		"codeigniter4/codeigniter4": "dev-develop"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\MythAuthFirebase\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CIModuleTests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
